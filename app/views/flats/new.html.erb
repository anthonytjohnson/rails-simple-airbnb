<div class="container">

  <h1>Add a New Room</h1>

  <%= simple_form_for(@flat) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :price_per_night %>
    <%= f.input :number_of_guests %>
    <%= f.submit class: 'btn btn-primary mt-2' %>
  <% end %>

  <%= link_to 'Back', flats_path %>
</div>
