<div class="container">
  <h1>Rooms Available</h1>
  <%= link_to 'New Room', new_flat_path, class: "btn btn-primary mt-4 mb-4" %>
  <div class="cards">
    <% @flats.each do |flat| %>
    <%= link_to flat_path(flat) do %>
      <%= render 'flats/card', flat: flat  %>
    <% end %>
    <%= link_to 'Edit', edit_flat_path(flat) %>
    <%= link_to 'Destroy', flat, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
  </div>
</div>
